@{
  Layout = "_Layout";
}


@if(@Model.Count == 0)
{
  <h3><i>Uh oh looks like there is no tags for you to look at... you probably should add a tag, or kindly leave this site because clearly you have no idea what you're doing. </i></h3>
  <br>
  <div class="text-center">
  <img src="../img/no_ingredients.png" class="img-fluid" alt="Responsive image" style="width:40%; border-radius: 10em;">
  <br>
  </div>

}

@if(@Model.Count > 0)
{

<table class="table text-left">
  <thead>
    <tr>
        <th>Tag List</th>
        <th class="text-right">delete</th>
    </tr>
  </thead>
  <tbody>
  @foreach(var tag in @Model)
  {
    <tr>
       <td><a href="/tags/@tag.GetId()">@tag.GetName()</a></td>

       <td class="text-right"><a href="/tags/@tag.GetId()/delete" class="btn btn-secondary text-right">x</a></td>
     </tr>
  }
  </tbody>
  </table>
}

<a href="/tags/create" class="btn btn-primary btn-lg btn-block btn-danger">ADD NEW TAG</a>
