@{
  Layout = "_Layout";
}


@if(@Model.Count == 0)
{
  <h3><i>Uh oh looks like there is no ingredients for you to look at...</i></h3>
}

@if(@Model.Count > 0)
{

<table class="table">
  <thead>
    <tr>
        <th>Ingredient Name</th>
    </tr>
  </thead>
  <tbody>
  @foreach(var ingredient in @Model)
  {
    <tr>
       <td><a href="/ingredients/@ingredient.GetId()">@ingredient.GetName()</a></td>

       <td><a href="/ingredients/@ingredient.GetId()/delete" class="btn btn-danger">x</a></td>
     </tr>
  }
  </tbody>
  </table>
}

<a href="/ingredients/create" class="btn btn-primary btn-lg btn-block btn-danger">ADD NEW INGREDIENT</a>
