  Layout = "_Layout";
}

<form method="post" action="/recipes/create">
  <div class="form-group">
    <label for="name"><h4>Recipe Name:</h4></label>
    <input type="text" name="name" class="form-control">
    <br>
    <label for="difficulty-rating"><h4>Difficulty: </h4></label>
